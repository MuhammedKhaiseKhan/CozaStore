        <!-- Add Product Form Start -->
        <div id="addProductForm" class="col-12">
            <div class="bg-light rounded p-4">
                <h2 class="mb-4 text-center">Add Product</h2>
                <% if (typeof message !== 'undefined') { %>
                <div class="alert alert-danger" role="alert">
                    <%= message %>
                </div>
                <% } %>

                <form   enctype="multipart/form-data" id="product-form">
                    <!-- Product Name and Brand Name -->
                    <div class="row mb-3">
                        <!-- Product Name -->
                        <div class="col-md-6">
                            <label for="productName" class="form-label">Product Name</label>
                            <input type="text" class="form-control" id="productName" name="productName" required>
                        </div>
                        <!-- Brand Name -->
                        <div class="col-md-6">
                            <label for="brandName" class="form-label">Brand Name</label>
                            <input type="text" class="form-control" id="brandName" name="brandName" required>
                        </div>
                    </div>

                    <!-- Size and Category -->
                    <div class="row mb-3">
                        <!-- Size -->
                        <div class="col-md-6">
                            <label for="size" class="form-label">Size</label>
                            <input type="text" class="form-control" id="size" name="size" required>
                        </div>
                        <!-- Category -->
                        <div class="col-md-6">
                            <label for="category" class="form-label">Category</label>
                            <select class="form-select" id="category" name="category" required>
                                <% if (typeof category !== 'undefined') {%>
                                    <% category.forEach(category=>{ %>
                                        <option value="<%= category._id %>"> <%= category.name %> </option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>
                    </div>

                    <!-- In Stock, Original Price, and Discount Price -->
                    <div class="row mb-3">
                        <!-- In Stock -->
                        <div class="col-md-4">
                            <label for="inStock" class="form-label">In Stock</label>
                            <input type="number" class="form-control" id="inStock" name="inStock" required>
                        </div>
                        <!-- Original Price -->
                        <div class="col-md-4">
                            <label for="originalPrice" class="form-label">Original Price</label>
                            <input type="number" class="form-control" id="originalPrice" name="originalPrice" required>
                        </div>
                        <!-- Discount Price -->
                        <div class="col-md-4">
                            <label for="discountPrice" class="form-label">Discount Price</label>
                            <input type="number" class="form-control" id="discountPrice" name="discountPrice" onkeyup="calculateDiscount()">
                        </div>
                    </div>

                    <!-- Discount, Description, and Color -->
                    <div class="row mb-3">
                           <!-- Color -->
                        <div class="col-md-4">
                            <label for="color" class="form-label">Color</label>
                            <input type="text" class="form-control" id="color" name="color" required>
                        </div>
                    
                        <!-- Discount -->
                        <div class="col-md-4">
                            <label for="discount" class="form-label">Discount(%)</label>
                            <input type="number" class="form-control" id="discount" name="discount" readonly>
                        </div>
                        <!-- Description -->
                        <div class="col-md-4">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
                        </div>
                    </div>
                    

                    <!-- Image Upload -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label for="image1" class="form-label">Image 1</label>
                            <input class="form-control" type="file" id="image1" name="image1" >
                        </div>
                        <div class="col-md-4">
                            <label for="image2" class="form-label">Image 2</label>
